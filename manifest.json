{
    "manifest_version": 2, 
    "name": "Copier",
    "version": "1.0",

    "description": "An extension to copy all tab URLs",

    "icons": {
        "48": "icons/icon.png"
    },

    "permissions": ["tabs"],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}